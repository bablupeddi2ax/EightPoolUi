<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"

    app:cardElevation="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgFoodItem"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:contentDescription="@string/food_item_image"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txtFoodName"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Eight Pool Salad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtIngredients"
            android:textSize="14sp"
            android:textColor="#9A9393"
            android:text="Lettuce, tomatoes, cucumber, olives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Price: "
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtPrice"
                android:textSize="14sp"
                android:textColor="#C41041"
                android:text="77.0 MAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


